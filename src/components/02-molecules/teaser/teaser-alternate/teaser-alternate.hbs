<article class="vd-teaser-alternate">
  <h3 class="vd-teaser-title mb-1">
    <a href="{{ url }}" class="vd-link-invisible">{{ title }}</a>
  </h3>
  <div class="row">
    <div class="col-md-6">
      <p>{{ text }}</p>
    </div>
    <div class="col-md-6">
      <a href="#">
        {{> @figure--default media }}
      </a>
    </div>
  </div>
  <p><a href="{{ url }}" class="vd-teaser-meta">{{> @time }}</a>
</article>
