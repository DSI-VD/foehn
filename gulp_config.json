{
  "app": {
    "env": "dev",
    "basedir": "styleguide",
    "ghpages": "styleguide"
  },
  "vendors": {
    "css": [
      "node_modules/font-awesome/css/font-awesome.min.css"
    ],
    "js": [
      "node_modules/bootstrap/dist/js/bootstrap.min.js"
    ],
    "fonts": [
      "assets/fonts/**/*",
      "node_modules/font-awesome/fonts/**/*"
    ],
    "polyfills": []
  },
  "images": [
    "assets/img/**/*"
  ],
  "svg": [
    "assets/svg/**/*"
  ],
  "tasks":  "./tasks/",
  "assets": "assets/",
  "iconsFontName": "icons",
  "build": "build/",
  "browsers": ["last 2 versions", "ie 9"],
  "singles": [],
  "metalsmith": {
    "assets": "node_modules/toolbox-utils/styleguide/",
    "dist": "styleguide/",
    "url": "https://dsi-vd.github.io/foehn/",
    "plugins": {
      "permalinks": {
        "pattern": ":title",
        "linksets": [{
          "match": { "collection": "pages" },
          "pattern": ":title"
        }]
      },
      "collections": {
        "inlinetext": {
          "sortBy": "title",
          "reverse": false,
          "refer": false
        },
        "atoms": {
          "sortBy": "title",
          "reverse": false,
          "refer": false
        },
        "molecules": {
          "sortBy": "title",
          "reverse": false,
          "refer": false
        },
        "organisms": {
          "sortBy": "title",
          "reverse": false,
          "refer": false
        },
        "pages": {
          "sortBy": "title",
          "reverse": false,
          "refer": false
        },
        "docs": {
          "sortBy": "title",
          "reverse": false,
          "refer": false
        }
      },
      "layouts": {
        "engine": "swig",
        "default": "default.html.swig",
        "directory": "assets/templates",
        "rename": true
      },
      "metalsmithinplace": {
        "engine": "swig"
      }
    }
  }
}
